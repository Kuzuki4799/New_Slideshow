<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="42dp"
    android:layout_height="42dp">

    <View
        android:id="@+id/grayBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blackAlpha20"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/stickerAddedPreview"
        app:layout_constraintEnd_toEndOf="@id/stickerAddedPreview"
        app:layout_constraintStart_toStartOf="@id/stickerAddedPreview"
        app:layout_constraintTop_toTopOf="@id/stickerAddedPreview" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stickerAddedPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        android:src="@drawable/amoji"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
