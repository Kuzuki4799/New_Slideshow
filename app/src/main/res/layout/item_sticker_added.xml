<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="42dp"
    android:layout_height="42dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/grayBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/blackAlpha20"
        app:layout_constraintTop_toTopOf="@id/stickerAddedPreview"
        app:layout_constraintBottom_toBottomOf="@id/stickerAddedPreview"
        app:layout_constraintStart_toStartOf="@id/stickerAddedPreview"
        app:layout_constraintEnd_toEndOf="@id/stickerAddedPreview"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stickerAddedPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        android:src="@drawable/sticker_collection_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
