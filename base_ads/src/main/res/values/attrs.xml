<?xml version="1.0" encoding="utf-8"?>
<resources>
    <integer name="config_slideWindowAnimation">300</integer>

    <attr name="text_primary_color" format="color|reference" />
    <attr name="text_secondary_color" format="color|reference" />

    <attr name="dark_mode">
        <enum name="default_blur" value="0"/>
        <enum name="default_fill" value="1"/>
        <enum name="light_blur" value="2" />
        <enum name="dark_blur" value="3" />
        <enum name="light" value="4" />
        <enum name="dark" value="5" />
    </attr>

    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference" />
        <attr name="shimmer_animation_duration" format="integer|reference" />
        <attr name="shimmer_auto_start" format="boolean|reference" />
        <attr name="shimmer_angle" format="integer|reference" />
        <attr name="shimmer_mask_width" format="float|reference" />
        <attr name="shimmer_gradient_center_color_width" format="float|reference" />
        <attr name="shimmer_reverse_animation" format="boolean|reference" />
    </declare-styleable>

    <declare-styleable name="NativeBannerAds">
        <attr name="dark_mode" />
    </declare-styleable>

    <declare-styleable name="NativeAds">
        <attr name="dark_mode" />
    </declare-styleable>


</resources>